pipeline {
    agent any
    stages {
        stage('Git checkout') {
            steps {
                echo 'Cloning the Terraform Project from Github'
                git 'https://github.com/clovette/terraform-ec2-demo.git'
            }
        }
        stage('Terraform INIT') {
            steps {
                echo 'Terraform INIT'
                sh 'terraform init'
            }
        }
        stage('Terraform PLAN') {
            steps {
                echo 'Terraform PLAN'
                sh 'terraform plan'
            }
        }
        stage('Approve?') {
            steps {
                echo 'Are you good with Terraform Plan?'
                input 'Are you good with Terraform Plan?'
            }
        }
        stage('Terraform APPLY') {
            steps {
                echo 'Terraform APPLY'
                sh 'terraform apply --auto-approve'
            }
        }
    }
}
